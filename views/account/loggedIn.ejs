    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

     <%# messages() %>

     <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

