<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%# messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

  <div id="form-contain">
    <form id="category-form" action="/inv/categoryManagement" method="post">
       <label for="classification_name">Classification Name:</label><br>
       <p>Classification can only contain letters</p>
       <input type="text" name="classification_name" id="classification_name" required pattern="[a-zA-Z]+" value="<%= locals.classification_name %>" pattern="[a-zA-Z]+">
       <div class="center">
       <input type="submit" value="Submit" class="login-submit">
       </div>
     </form>
   </div>

